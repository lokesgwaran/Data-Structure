#include <stdio.h>
#define INF 9999
#define MAX 20

void prims(int G[MAX][MAX], int n) {
    int selected[MAX], no_edge = 0, x, y, i, j, min;
    for(i = 0; i < n; i++)
        selected[i] = 0;
    selected[0] = 1;
    printf("Edge : Weight\n");
    while(no_edge < n - 1) {
        min = INF;
        for(i = 0; i < n; i++) {
            if(selected[i]) {
                for(j = 0; j < n; j++) {
                    if(!selected[j] && G[i][j]) {
                        if(min > G[i][j]) {
                            min = G[i][j];
                            x = i;
                            y = j;
                        }
                    }
                }
            }
        }
        printf("%d - %d : %d\n", x, y, G[x][y]);
        selected[y] = 1;
        no_edge++;
    }
}

int main() {
    int G[MAX][MAX], n, i, j;
    printf("Enter number of vertices: ");
    scanf("%d", &n);
    printf("Enter adjacency matrix:\n");
    for(i = 0; i < n; i++)
        for(j = 0; j < n; j++)
            scanf("%d", &G[i][j]);
    prims(G, n);
    return 0;
}
